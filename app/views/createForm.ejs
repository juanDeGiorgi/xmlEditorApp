    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <title>Crear nodo</title>
  </head>
  <body class="create">
    <%- include('./partials/header.ejs')%>
    <main class="create-main">
      <form class="create-form" action="/nodes/create" method="POST">
        <h1 class="create-title">Crear nodo :</h1>
        <div class="mb-3">
          <label for="name" class="form-label">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Ejemplo : TorsiÃ³n1"
          />
          <div id="nameError" class="invalid-feedback">
            Please choose a username.
          </div>
        </div>
        <div class="mb-3">
          <label for="OBJName" class="form-label">Archivo</label>
          <input
            type="text"
            class="form-control"
            id="OBJName"
            name="OBJName"
            placeholder="Ejemplo : torsion_1"
          />
          <div id="OBJNameError" class="invalid-feedback">
            Please choose a username.
          </div>
        </div>
        <div class="mb-3">
          <label for="scale" class="form-label">escala</label>
          <input
            type="text"
            class="form-control"
            id="scale"
            name="scale"
            placeholder="Ejemplo : 1.2"
          />
          <div id="scaleError" class="invalid-feedback">
            Please choose a username.
          </div>
        </div>

        <div class="container-form-buttons">
          <button type="submit" class="btn btn-primary create-button">
            Crear
          </button>
          <a href="/" class="btn btn-danger">Cancelar</a>
        </div>
      </form>
    </main>

    <!-- boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
