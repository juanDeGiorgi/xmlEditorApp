<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- boostrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- boostrap -->

    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <title>Crear nodo</title>
  </head>
  <body class="create">
    <%- include('./partials/header.ejs')%>
    <main class="create-main">
      <form class="create-form" action="/nodes/create" method="POST">
        <h1 class="create-title">Crear nodo :</h1>
        <div class="mb-3">
          <label for="name" class="form-label">Nombre</label>
          <input
            type="text"
            class="form-control <%=locals.errors && errors.Name ? 'is-invalid' : null%>"
            id="Name"
            name="Name"
            placeholder="Ejemplo : Torsi√≥n1"
            value="<%=locals.node ? node.Name : null%>"
          />
          <div
            id="nameError"
            class="invalid-feedback"
            style="min-height: 22px; display: block"
          >
            <%=locals.errors && errors.Name ? errors.Name.msg : null%>
          </div>
        </div>
        <div class="mb-3">
          <label for="OBJName" class="form-label">Archivo</label>
          <input
            type="text"
            class="form-control <%=locals.errors && errors.OBJName ? 'is-invalid' : null%>"
            id="OBJName"
            name="OBJName"
            placeholder="Ejemplo : torsion_1"
            value="<%=locals.node ? node.OBJName : null%>"
          />
          <div
            id="OBJNameError"
            class="invalid-feedback"
            style="min-height: 22px; display: block"
          >
            <%=locals.errors && errors.OBJName ? errors.OBJName.msg : null%>
          </div>
        </div>
        <div class="mb-3">
          <label for="Scale" class="form-label">escala</label>
          <input
            type="text"
            class="form-control <%=locals.errors && errors.scale ? 'is-invalid' : null%>"
            id="Scale"
            name="Scale"
            placeholder="Ejemplo : 1.2"
            value="<%=locals.node ? node.Scale : null%>"
          />
          <div
            id="scaleError"
            class="invalid-feedback"
            style="min-height: 22px; display: block"
          >
            <%=locals.errors && errors.Scale ? errors.Scale.msg : null%>
          </div>
        </div>

        <div class="container-form-buttons">
          <button type="submit" class="btn btn-primary create-button">
            Crear
          </button>
          <a href="/" class="btn btn-danger">Cancelar</a>
        </div>
      </form>
    </main>

    <!-- boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- boostrap -->
  </body>
</html>
